{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"strict": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
